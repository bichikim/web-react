{
  "name": "@winter-love/signals-core",
  "version": "0.0.1",
  "repository": "git@github.com:bichikim/web-react.git",
  "author": "bihci@live.co.kr",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./*": "./*"
  },
  "main": "dist/index.js",
  "jsdelivr": "dist/index.global.js",
  "unpkg": "dist/index.global.js",
  "module": "dist/index.mjs",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup --dts --minify",
    "dev": "tsup --watch",
    "prepare": "tsup --dts",
    "publish": "npm publish"
  },
  "dependencies": {
    "@winter-love/signals-rebuild": "workspace:*"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.14",
    "flush-promises": "^1.0.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "preact": "^10.11.1",
    "react-dom": "^18",
    "tslib": "^2.4.0",
    "tsup": "^6.1.3",
    "typescript": "^4.6.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "tsup": {
    "entry": [
      "src/react/index.ts",
      "src/index.ts"
    ],
    "clean": true,
    "format": [
      "cjs",
      "esm",
      "iife"
    ],
    "external": ["react", "preact"],
    "outDir": "dist",
    "sourcemap": true,
    "splitting": false
  }
}
